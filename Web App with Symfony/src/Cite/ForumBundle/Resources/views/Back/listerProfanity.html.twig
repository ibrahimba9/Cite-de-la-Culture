{% extends'@CiteForum/Back/baseBack.html.twig' %}

{% block title %}Liste des Sujets{% endblock %}

{% block titrePage %}Liste des Sujets{% endblock %}

{% block body %}
    {<link rel="stylesheet" href="{{ asset('cssBack/forum.css') }}" />}

    <input type="text" placeholder="Recherche..." class="form-control" id="myInput"/> <br/>
    <table class="table table-bordered table-striped mb-none" id="datatable-editable">
        <thead>
        <tr>
            <th>Mot</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody id="myTable">
        {% for m in mots %}
            <tr class="gradeX">
                <td>{{ m }}</td>
                <td class="actions">
                    <a onclick="showModal()" id="linkDelete" data-href="{{ path('back_remove_profanity', {'word' : m}) }}" href="#" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div style="margin-left: 85%;">{{ knp_pagination_render(mots) }}</div>

    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <span class="close">&times;</span>
                <h2 id="hTitre">Supprimer Ce Sujet?</h2>
            </div>
            <div class="modal-body">
                <h2 id="hContent">Etes-vous s√ªr de vouloir Supprimer ce Sujet?</h2>
            </div>
            <div class="modal-footer">
                <table style="background-color: transparent;">
                    <tr style="background-color: transparent;">
                        <td>
                            <a id="linkConfirm">Confirmer</a>
                        </td>
                        <td>
                            <a id="linkAnnuler" href="#">Annuler</a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script src="{{ asset('js/ForumBack.js') }}"></script>
    <script src="{{ asset('js/ForumBackDeleteModal.js') }}"></script>

{% endblock %}